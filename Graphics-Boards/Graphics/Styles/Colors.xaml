<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LightColor">#fff</Color>
    <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}" />

    <Color x:Key="PrimaryDarkColor">#0069c0</Color>
    <SolidColorBrush x:Key="PrimaryDarkColorBrush" Color="{StaticResource PrimaryDarkColor}" />

</ResourceDictionary>